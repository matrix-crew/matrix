# Run lint-staged for JS/TS files
pnpm lint-staged

# Run Python pre-commit if available and Python files are staged
STAGED_PY_FILES=$(git diff --cached --name-only --diff-filter=ACM -- '*.py')
if [ -n "$STAGED_PY_FILES" ]; then
  if command -v pre-commit >/dev/null 2>&1; then
    echo "$STAGED_PY_FILES" | xargs pre-commit run --files
  else
    echo "Warning: Python pre-commit not installed. Skipping Python checks."
    echo "Install with: pip install pre-commit && pre-commit install"
  fi
fi
