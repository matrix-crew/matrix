{
  "name": "@matrix/desktop",
  "version": "0.0.3",
  "private": true,
  "description": "Matrix Electron desktop application",
  "homepage": "https://github.com/matrix-crew/matrix",
  "main": "./out/main/index.js",
  "author": {
    "name": "Matrix",
    "email": "thearchitect9927@gmail.com"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "download:python": "node scripts/download-python.mjs",
    "package": "node scripts/package.mjs --publish never",
    "package:mac": "node scripts/package.mjs --mac --publish never",
    "package:win": "node scripts/package.mjs --win --publish never",
    "package:linux": "node scripts/package.mjs --linux --publish never",
    "package:publish": "node scripts/package.mjs --publish always",
    "lint": "eslint src",
    "type-check": "tsc --noEmit && tsc --noEmit -p tsconfig.node.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "clean": "rm -rf dist out .turbo resources/python resources/uv resources/downloads",
    "postinstall": "electron-rebuild -f -w node-pty"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.468.0",
    "node-pty": "^1.1.0",
    "python-shell": "^5.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "^4.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "28.3.3",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "jsdom": "^28.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.3",
    "vite": "^5.4.0",
    "vitest": "^4.0.18"
  }
}
